<grammar xmlns="http://relaxng.org/ns/structure/1.0">

	<define name="index">
		<element name="index">
			<ref name="type"/>
			<ref name="entries"/>
		</element>
	</define>

	<define name="entries">
		<element name="entries">
			<ref name="entry"/>
		</element>
	</define>

	<define name="entry">
		<element name="entry">
			<ref name="key"/>
			<ref name="entities"/>
		</element>
	</define>

	<define name="entities">
		<element name="entities">
			<ref name="entity"/>
		</element>
	</define>

	<define name="entity">
		<element name="entity">
			<ref name="file"/>
			<ref name="name"/>
		</element>
	</define>

	<define name="key">
		<element name="key">
			<text/>
		</element>
	</define>

	<define name="file">
		<element name="file">
			<text/>
		</element>
	</define>

	<define name="name">
		<element name="name">
			<text/>
		</element>
	</define>

	<start>
		<choice>
			<ref name="index"/>
		</choice>
	</start>

</grammar>
